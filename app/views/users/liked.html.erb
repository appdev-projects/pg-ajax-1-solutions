<div class="row mb-4">
  <div class="col-md-6 offset-md-3">
    <%= render "users/user", user: @user %>
  </div>
</div>

<% if current_user == @user ||
      !@user.private? ||
      @user.followers.include?(current_user) %>
  
  <%= render "users/photos_tab", user: @user, photos: @user.liked_photos %>
<% end %>